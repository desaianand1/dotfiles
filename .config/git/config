[include]
 	path = ~/.config/git/config.local

[core]
	excludesfile = ~/.config/git/ignore
	editor = nvim
	pager = delta

[init]
	defaultBranch = main

[color]
	ui = auto
	status = auto
	branch = auto	

[interactive]
	diffFilter = delta --color-only --features=interactive

[delta]
	features = Catppuccin Macchiato zebra-dark
	navigate = true
	line-numbers = true
	side-by-side = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default


